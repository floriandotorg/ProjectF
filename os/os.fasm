    *=$01000000

    ; uart tx on
    lda  #%0010
    stab $ff000004

    ldx  #0
    
loop:
    lda  (hello_str_p),X
    beq  end
    stab $ff000006
    
wait_uart:
    ldab $ff000003
    and  #%10
    bne  wait_uart
    
    inx
    jmp  loop
    
end:
    hlt
    
hello_str:
    .string Hallo Welt!
    
hello_str_p:
    .word hello_str